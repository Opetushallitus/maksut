{
  "scripts": {
    "lint:clj": "clj-kondo --config oph-configuration/clj-kondo.config.edn --fail-level error --lint src",
    "lint:clj:lint-staged": "clj-kondo --config oph-configuration/clj-kondo.config.edn --lint",
    "lint:playwright": "eslint --max-warnings 0 --fix",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=14"
  },
  "lint-staged": {
    "src/**/*.{clj,cljs,cljc}": [
      "npm run lint:clj:lint-staged"
    ],
    "playwright/tests/*.ts": [
      "npm run lint:playwright"
    ]
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.2",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@noble/hashes": "^1.3.3",
    "@playwright/test": "^1.40.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "babel-loader": "^8.1.0",
    "clj-kondo": "^2024.02.12",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-playwright": "^0.15.3",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^10.5.0",
    "pm2": "^4.5.6",
    "shadow-cljs": "^2.27.4",
    "uuid": "^9.0.1",
    "webpack": "^5.3.0"
  },
  "dependencies": {
    "@opetushallitus/oph-design-system": "github:opetushallitus/oph-design-system#v0.0.1",
    "create-react-class": "^15.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
